                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="btn btn-outline-primary my-2 my-sm-0">Login</a>
                        <a class="btn btn-primary my-2 my-sm-0">Register</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    @RenderSection("breadcrums",required:false)
    <main role="main"
          @RenderBody()
    </main>
    <footer class="border-top text-muted text-center">
        <div class="container">
            Copyright &copy; Anvi's Bookstore @DateTime.Now.Year
        </div>
    </footer>


</body>
<script src="~/lib/jquery/jquery.js"></script>
<script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
@RenderSection("scripts",required:false)
</html>
